{% extends 'base.html.twig' %}
{% block body %}
    <a class="btn btn-success" href="{{ path("server_credentials_add") }}">Add Server Credential</a>
    <hr/>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Updated</th>
            <th scope="col">Servers</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for credential in credentials %}
            <tr>
                <th scope="row">{{ credential.name }}</th>
                <td>{{ credential.updated|date("d-m-Y h:i") }}</td>
                <td>
                    <ul>
                        {% for server in credential.servers %}
                            <li>
                                {{ server.name }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ credential.active }}</td>
                <td><ul><li><a href="{{ path('server_credentials_delete', {'server_credential': credential.id}) }}">Delete</a></li></ul></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}